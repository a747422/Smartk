<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<include-->
    <!--android:id="@+id/settings_title"-->
    <!--layout="@layout/home_baby_more_title" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_home_monitoring" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="孩子教室监控" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/im_baby_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/no_" />

    <TextView
        android:id="@+id/tv_baby_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:text="请您登陆后查看宝宝信息" />

    <ListView
        android:id="@+id/lv_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>