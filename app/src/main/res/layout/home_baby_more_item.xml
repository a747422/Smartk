<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/home_horizontal_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/card_more_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:layout_weight="0.6"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            tools:ignore="KeyboardInaccessibleWidget">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:paddingBottom="32dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_info" />

            <TextView
                android:id="@+id/card_tv_more_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:paddingHorizontal="40dp"
                android:text="小二班"
                android:textColor="#333333"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/home_horizontal_margin"
            android:layout_weight="0.4"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="宝宝信息"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_more_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="姓名：叶问" />

            <TextView
                android:id="@+id/tv_more_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="性别：女" />

            <TextView
                android:id="@+id/tv_more_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所在班级：小二班" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>